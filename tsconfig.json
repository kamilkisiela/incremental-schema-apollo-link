{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "lib": ["es2017", "dom", "esnext.asynciterable"],
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src"]
}